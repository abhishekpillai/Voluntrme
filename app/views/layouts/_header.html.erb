<header>
	<h1>Volunteer App</h1>
	
	<div id="user_nav">
	  <% if session[:volunteer] %>
			<p><%= current.first_name %></p>
			<%= link_to "My Profile Page", volunteer_url(session[:volunteer]) %>
	  	<%= link_to "Log out", log_out_url %>
	  <% else %>
	  	<%= link_to "Sign up", new_volunteer_url %> or
	  	<%= link_to "log in", log_in_url %>
	  <% end %>

		<% if flash[:notice] %>
		  <p style="color: white; background: red; padding: 4px">
		  <%= flash[:notice] %>
		  </p>
		<% end %>
	
</header>