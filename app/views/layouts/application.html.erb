<!DOCTYPE html>
<html>
<head>
  <title>Voluntrme</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
</head>
<body>
  
<div id="user_nav">
  <% if session[:volunteer] %>
  	Logged in!
  	<%= link_to "Log out", log_out_url %>
  <% else %>
  	<%= link_to "Sign up", new_volunteer_url %> or
  	<%= link_to "log in", log_in_url %>
  <% end %>

	<% if flash[:notice] %>
	  <p style="color: white; background: red; padding: 4px">
	  <%= flash[:notice] %>
	  </p>
	<% end %>
	
<%= yield %>

</body>
</html>
